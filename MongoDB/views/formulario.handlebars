<h1 class="display-5 fw-bold mx-3">Ingrese Productos (usando Handlebars)</h1>
<form class="mx-3" id="formProducto">
    <input class="form-control mb-3" type="text" id="p_title" placeholder="Title">
    <input class="form-control mb-3" type="number" id="p_price" placeholder="Price">
    <input class="form-control mb-3" type="text" id="p_thumbnail" placeholder="Thumbnail">
</form>
<div class="d-flex mx-3">
    <button class="btn btn-primary mb-3" id="agregar">Agregar Producto</button>    
</div>
<p class="mx-3" id="mensajeError"></p>
<div class="mx-3"> 
    <table id="tablaProducto" class="table table-dark table-striped">
        <thead >
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Imagen</th>
        </thead>
        <tbody id="lista">

        </tbody>
    </table>
    <h2 class="fw-bold" id="msgProducto">No hay productos</h2>
</div>
{{> chat }}
<script src="js/main.js"></script>