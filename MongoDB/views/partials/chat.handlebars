<div class="mx-3 rounded-4 bg-primary p-2 text-dark bg-opacity-10">
    <form class="mt-3 " id="formChat">
        <fieldset>
            <legend class="mx-3 fs-1 fw-bold">Centro de Mensajes</legend>
                <div class="mx-3">
                    <label class="form-label">Email address</label>
                    <input type="email" id="mailChat" class="form-control" placeholder="name@example.com">    
                </div>
                <div class="mt-3 mx-3">
                    <label class="form-label">Ingrese su mensaje:</label>
                    <textarea class="form-control" id="mensajeChat" rows="2"></textarea>
                    
                
                </div>
                <p class="mx-3 fw-bold text-danger" id="mensajeErrorChat"></p>
        </fieldset>
    </form>
    <button class="btn btn-primary mx-3 mb-3" id="enviarChat">Enviar!</button>
    <table id="tablaChat" class="table">
        <tbody id="listaChats">

        </tbody>
    </table>    
</div>
